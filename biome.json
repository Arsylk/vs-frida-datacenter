{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "defaultBranch": "main",
        "useIgnoreFile": true
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "trailingCommas": "all",
            "bracketSpacing": true,
            "semicolons": "always"
        }
    },
    "organizeImports": {
        "enabled": true,
        "ignore": ["dist/**", "node_modules/**"],
        "include": ["*.ts"]
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 110
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noAssignInExpressions": "off",
                "noExplicitAny": "off"
            },
            "complexity": {
                "useArrowFunction": "info"
            },
            "style": {
                "noParameterAssign": "off",
                "useNodejsImportProtocol": "off",
                "useTemplate": {
                    "level": "warn",
                    "fix": "safe"
                }
            }
        }
    },
    "files": {
        "ignore": ["dist/**", "node_modules/**"],
        "include": ["*.ts", "*.js", "*.json"],
        "maxSize": 10485760
    }
}
